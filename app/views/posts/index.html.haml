%div.posts
  -@posts.each  do |post|
    %div.post
      %dl.user
        %img{src: 'http://www.gravatar.com/avatar/b417c896d2bcdeee7823fd8f1afc1b16.png'}
        sonyfe25cp
      %dl.content
        =post.content
      %dl.options
        %a.momo.btn.btn-warning momo
        /=link_to '参战', post_path(post.id), class: 'pk btn btn-danger'
        =link_to '参战', new_post_path, class: 'pk btn btn-danger'
        =link_to '评论', post_path(post.id), class: 'comment btn btn-info'
