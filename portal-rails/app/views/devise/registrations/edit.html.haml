.row-fluid
  .span10
    %div.legend 个人信息
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f|
      = f.error_notification

      .form-inputs
        = f.input :email, :readonly => true
        = f.input :username, readonly: true
        = f.input :current_password, :hint => "需要您当前的密码来保存您的本次修改。", :required => true, :autofocus => true
        = f.input :password, :autocomplete => "off", :hint => "如果不需要修改密码，请不要填写。", :required => false
        = f.input :password_confirmation, :required => false

      .form-actions
        = f.button :submit, "更新", class: 'btn btn-primary'
        = link_to "返回首页", root_path

  .span2= render_cell :user, :management_nav, current_user: resource
