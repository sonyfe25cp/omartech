= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal' }) do |f|
  %div.legend 用户登录
  .form-inputs
    = f.input :login, :required => false, :autofocus => true, :placeholder => '用户名或邮箱'
    = f.input :password, :required => false
    = f.input :remember_me, :as => :boolean, label: false, inline_label: '记住我' if devise_mapping.rememberable?

  .form-actions
    = f.button :submit, "登录", class: 'btn btn-warning btn-large'
    - if devise_mapping.registerable?
      = link_to "立即注册", new_registration_path(resource_name)
    = link_to "忘记密码了？", new_password_path(resource_name)
